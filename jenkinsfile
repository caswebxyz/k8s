

pipeline {
    environment { 
        dockerImage = '' 
      }
    agent any
    stages {
        stage('Code Checkout') {
            steps {
               checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'GitHubAccess', url: 'git@github.com:caswebxyz/k8s.git']]])
               sh "ls -al" 
            }       
        }
	stage('Create NameSpace') {
            steps {
                sh "kubectl create ns ${ENVR}" 
            }       
        }
        stage('Kubectl Apply Dry Run') {
            steps {
                sh "kubectl apply -n ${ENVR} -f voting-app-aws.yml -o yaml --dry-run" 
            }       
        }
        stage('Kubectl Apply') {
            steps {
                sh "kubectl apply -n ${ENVR} -f voting-app-aws.yml" 
            }       
        }
    }
}
